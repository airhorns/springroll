<h1>Listing menus</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Parent</th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for menu in @menus %>
  <tr>
    <td><%=h menu.id %></td>
    <td><%=h menu.parent_id %></td>
    <td><%=h menu.name %></td>
    <td><%=h menu.description %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

